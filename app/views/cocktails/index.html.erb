</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4">

      <h1>These are the cocktails:</h1>

      <% @cocktails.each do |cocktail| %>
        <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
        <%= link_to cocktail_path(cocktail), method: :delete do %>
          <i class="fas fa-times"></i>
        <% end %>
        <br>
        <% end %>


      <%= link_to "Add a new cocktail", new_cocktail_path %>
    </div>
  </div>
</div>




